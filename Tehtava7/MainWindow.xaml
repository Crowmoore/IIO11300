<Window x:Class="Tehtava7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava7"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="525" FontSize="18.667">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Password:"></TextBlock>
        <TextBox x:Name="txtPassword" TextChanged="txtPassword_TextChanged"></TextBox>
        <TextBlock x:Name="tbChars" Text="Characters: "></TextBlock>
        <TextBlock x:Name="tbUpper" Text="Uppercase: "></TextBlock>
        <TextBlock x:Name="tbLower" Text="Lowercase: "></TextBlock>
        <TextBlock x:Name="tbNums" Text="Numbers: "></TextBlock>
        <TextBlock x:Name="tbSpecials" Text="Specials: "></TextBlock>
        <StackPanel x:Name="spResult"  Background="Gray" Height="100">
            <TextBlock x:Name="tbResult" Text="Enter password" Margin="140, 20, 0, 0" FontSize="32"></TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
